@model SeeSpot.ViewModels.ProfileViewModel
@{
    
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "noimage.jpg");

}

<h1>Profile</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Color"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Color
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Gender"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Gender
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Weight"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Weight.ToString()
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Birthday"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Birthday.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Microchipped"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Microchipped
        </dd>
        

        <dt class="col-sm-2">
            <label asp-for="Breed"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.BreedName
        </dd>
    </dl>



</div>
<div>
    <a asp-action="EditProfile" asp-controller="pet" asp-route-ID="@Model.ID">Edit</a>|
    <a asp-action="Index">Back to List</a>


</div>

<div class="form-group row col-sm-4 offset-4">
    <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}