@model SeeSpot.Models.Pet


<h1>Profile</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Color"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Color
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Gender"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Gender
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Weight"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Weight.ToString()
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Birthday"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Birthday.ToShortDateString()
        </dd>
        @*<dt class="col-sm-2">
            <label asp-for="Breed"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Breed.Name
        </dd>*@
    </dl>

   

</div>
<div>
    <a asp-action="Edit" asp-controller="pet" asp-route-ID="@Model.ID">Edit</a>|
