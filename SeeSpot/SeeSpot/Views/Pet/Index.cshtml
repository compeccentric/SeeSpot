@model List<SeeSpot.Models.Pet>

<h1>Pets</h1>
<a asp-controller="Pet" asp-action="Add">Add</a>&nbsp;&nbsp;
@*<a asp-controller="Pet" asp-action="Remove">Remove</a>*@
@if (Model.Count == 0)
{
    <p>No Pets yet!</p>
}
@foreach (var pet in Model)
{
    var photoPath = "~/images/" + (pet.PhotoPath ?? "noimage.jpg");
    <h2>@pet.Name</h2>
    
   
    <br />
    
    <td>
        <a asp-action="EditProfile" asp-controller="pet" asp-route-ID="@pet.ID">Edit</a>
        <a asp-action="Profile" asp-route-ID="@pet.ID">Profile</a>
        <a asp-action="Delete" asp-route-ID="@pet.ID">Delete</a>
    </td>
    <br />
    <img src="@photoPath" asp-append-version="true" />  

}

